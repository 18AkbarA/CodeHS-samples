    public void chooseShipLocation(Ship s, int row, int col, int direction){
        
        int shipLength = s.getLength();
        
        
        if(shipLength != 2 && shipLength != 3 && shipLength != 4 && shipLength != 5){
            displayText("Ship must have one of the following lengths: 2,3,4,5");
        }
        else{
            
            if(shipLength == 2){
                int twoshipnumb  = playerGrid.twoshipnumb;
                if (twoshipnumb >= 1){
                    displayText("WARNING: You can only have one ship with length 2!");
                    
                }
                else{
                    s.setDirection(direction);
                    s.setLocation(row,col);
        
                    playerGrid.addShip(s);
                }

            }

            if(shipLength == 3){
                int threeshipnumb = playerGrid.threeshipnumb;
                if (threeshipnumb >= 2){
                    displayText("WARNING: You can only have two ships with length 3!");
                    
                }
                else{
                    s.setDirection(direction);
                    s.setLocation(row,col);
                    
                    playerGrid.addShip(s);
                }

            }

            if(shipLength == 4){
                int fourshipnumb = playerGrid.fourshipnumb;
               
                if (fourshipnumb >= 1){
                    displayText("WARNING: You can only have one ship with length 4!");
                    
                }
                else{
                    s.setDirection(direction);
                    s.setLocation(row,col);
        
                    playerGrid.addShip(s);

                }

            }
            
            if(shipLength == 5){
                int fiveshipnumb = playerGrid.fiveshipnumb;
                if (fiveshipnumb >= 1){
                    displayText("WARNING: You can only have one ship with length 5!");
                    
                }
                else{
                    s.setDirection(direction);
                    s.setLocation(row,col);
        
                    playerGrid.addShip(s);
                }

            }

        }
        
        
    }
    
    
    
    public void askForGuess(int row, int col, Player opponent){
        if (opponent.playerGrid.alreadyGuessed(row,col)){
            displayText("That square is already guessed!");
            
        }
        
        else if (row > 9 || row < 0 || col > 9 || col < 0){
            displayText("That square does not exist!");
        }
        else{
            
            boolean squareHasShip = opponent.playerGrid.hasShip(row,col);
            
            if (squareHasShip){
                displayText("Hit!");
                
                opponent.playerGrid.markHit(row,col);
                
                hitShips++;
                
                
                Location thesquare = opponent.playerGrid.get(row, col);
                
                String squareShip = thesquare.getShipType();
               
                if(squareShip.equals("patrolBoat")){
                	
                	patrolHits++;
                	
                	if(patrolHits == 2){
                		System.out.println("Sunk a patrol boat! (length 2)");
                	}
                }
                else if(squareShip.equals("submarine")){
                	submarineHits++;
                	
                	if(submarineHits == 3){
                		System.out.println("Sunk a submarine! (length 3)");
                	}
                }
                else if(squareShip.equals("destroyer")){
                	destroyerHits++;
                	
                	if(destroyerHits == 3){
                		System.out.println("Sunk a destroyer! (length 3)");
                	}
                }
                else if(squareShip.equals("battleship")){
                	battleshipHits++;
                	
                	if(battleshipHits == 4){
                		System.out.println("Sunk a battleship! (length 4)");
                	}
                }
                else if(squareShip.equals("carrier")){
                	carrierHits++;
                	
                	if(carrierHits == 5){
                		System.out.println("Sunk a carrier! (length 5)");
                	}
                }
            }
            else{
                displayText("Miss!");
                opponent.playerGrid.markMiss(row,col);
            }
            
            
            
            
        }
        
        
        
    }
    public int convertToInt(String theChar){
        String lowered = theChar.toLowerCase();
        
        char stringChar = lowered.charAt(0);
        
        int charint = (int)stringChar;
        if(97 <= charint && charint <= 106){
            return charint - 97;
        }
        else{
            return 0;
        }
        
        
    }
    
    public void checkSynthax(){
        displayText("Please check your synthax!");
    }
    
    public void putDownShip(String guess){
        
        if(guess.indexOf(":") <= -1){
            checkSynthax();
        }
        else{
            String[] guessStrings = guess.split(":");
            
            //displayText(guessStrings[0]);
            
            int guessStringLength = guessStrings.length;
            int stringTwoLength = guessStrings[1].length();
            
            if (guessStringLength != 3 || (stringTwoLength != 2 && guessStrings[1].indexOf("10") <= -1)){
                checkSynthax();
                
            }
            else{
                int Shiplength = Integer.parseInt(guessStrings[0]);
                
                Ship theShip = new Ship(Shiplength);
                
                String fullSecond = guessStrings[1];
                char secondFirstChar = guessStrings[1].charAt(0);
                String secondSecondPart = fullSecond.replace(""+ secondFirstChar, "");
                int Shiprow = convertToInt("" + secondFirstChar);
                
                int Shipcol = Integer.parseInt(secondSecondPart) - 1;
                String dirgiven = guessStrings[2].toLowerCase();
                int Shipdir = -1;
                if(dirgiven.equals("horizontal")){
                    Shipdir = 0;
                }
                else if (dirgiven.equals("vertical")){
                    Shipdir = 1;
                }
                else{
                    checkSynthax();
                    
                }
                if (0 > Shipcol || 11 <= Shipcol || -1 >= Shiprow || 10<= Shiprow){
                    checkSynthax();
                    
                    
                }
                else{
                    chooseShipLocation(theShip,Shiprow,Shipcol,Shipdir);
                    
                }
                
                
            }
            
            displayText("Current status:");
            printMyShips();
        }
    }
    
